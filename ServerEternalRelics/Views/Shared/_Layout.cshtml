<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Eternal Relics</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>


    <div class="header">
        <img src="~/Images/logo.png" style="height:60px; width:60px;" />
        <div class="titleText">Eternal Relics</div>
        <div class="subText">Adventurers paradise!</div>

    </div>

    <div>
        @Html.Partial("~/Views/Shared/Navbar.cshtml")
    </div>

    <div class="container body-content">
        @RenderBody()
        <footer>
            <p style="float:left">&copy; @DateTime.Now.Year - Eternal Relics <div style="float:right">Roy Stobbelaar - S1059644 - Windesheim</div></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
